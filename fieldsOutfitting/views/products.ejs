<%- include('./partials/head.ejs') %>

    <%- include('./partials/header.ejs') %>

        <main>

            <div id="carouselIndicator" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                  <li data-target="#carouselIndicator" data-slide-to="0" class="active"></li>
                  <li data-target="#carouselIndicator" data-slide-to="1"></li>
                  <li data-target="#carouselIndicator" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img class="d-block w-100" src="/images/banner1.PNG" alt="First slide">
                    <div class="carousel-caption">
                        <h3 class="h3-responsive">10% Off in Walkers!</h3>
                        <p>Fields Outfitting</p>
                    </div>
                </div>
                  <div class="carousel-item">
                    <img class="d-block w-100" src="/images/banner2.PNG" alt="Second slide">
                    <div class="carousel-caption">
                        <h3 class="h3-responsive">New products!</h3>
                        <p>Fields Outfitting</p>
                    </div>
                </div>
                  <div class="carousel-item">
                    <img class="d-block w-100" src="/images/banner3.PNG" alt="Third slide">
                    <div class="carousel-caption">
                        <h3 class="h3-responsive">Choose your look!</h3>
                        <p>Fields Outfitting</p>
                    </div>
                </div>
                </div>
                <a class="carousel-control-prev" href="#carouselIndicator" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselIndicator" role="button" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>

            <div class="row">
                <div class="row col-lg-3 col-sm-12 lateral text-center">
                    <div class="selector">
                        <ul list-type='none'>
                            <li>
                                <a href="">Classic</a>
                            </li>
                            <li>
                                <a href="">Walkers</a>
                            </li>
                            <li>

                                <!-- <div class="form-group row">
                                    <label for="size" class="col-sm-3 col-md-3 form-control-label text-center">Talle:</label>
                                    <div class="col-sm-3 col-md-6">
                                        <input type="number" class="qty form-control text-center" id="input-qty" name="qty" maxlength="7" value="1">
                                    </div>
                                </div> -->
                            </li>
                        </ul>
                    </div>

                </div>

                <div class="row col-lg-3 col-sm-12 lateral text-center form-group search">
                    <form action="/products" method='POST'>
                        <input type="text" name="search" id="">
                        <button type="submit">Search</button>
                    </form>
                </div>

                <div class="row col-12 galeria">
                    <% for (product of products) { %>
                    <div class="col-lg-3 sm-12 fg">
                        <img src="<%= product.image %>" alt="">
                        <h5><a class='name' href="/products/detail/<%= product.id %>"><%= product.name %></a></h5>
                        <p>$<%= product.price %></p>
                        <a href="/products/detail/<%= product.id %>" class="btn btn-warning">Add to cart</a>
                    </div>
                    <% } %>
                </div>

                <div class="col-3 ">
                    <% if(user.category_id == 1) { %>
                        <a href="/products/load" class="btn btn-warning admin-btn">LOAD NEW PRODUCT</a>
                    <% } %>
                </div>

        </main>
    <%- include('./partials/footer.ejs') %>