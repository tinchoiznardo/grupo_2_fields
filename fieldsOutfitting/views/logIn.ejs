<%- include('./partials/head.ejs') %>

    <%- include('./partials/header.ejs') %>
    
    
    <main>
             
        <div>
            
            <div class="card bg-light">
                <article class="card-body mx-auto" style="max-width: 400px;">
                    <h4 class="card-title mt-3 text-center">Log In</h4>
                    <p class="text-center">Welcome to Fields Fields!</p>
                    <p>
                        <a href="" class="btn btn-block btn-facebook"> <i class="fab fa-facebook-f"></i>   Login with facebook</a>
                    </p>
                    <p>
                        <a href="" class="btn btn-block bg-warning"> <i class="fab"></i>   Login with gmail</a>
                    </p>
                    <p class="divider-text">
                        <span class="bg-light"></span>
                    </p>
                    <form action="/user/log-in" method="POST">
                        <div class="form-group input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                            </div>
                            <input name="email" class="form-control" placeholder="Email" type="email">
                        </div> 
                        <div class="form-group input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                            </div>
                            <input name="password" class="form-control" placeholder="Password" type="password">
                        </div> 
                        <div style='color: red'>
                        <% if (error) {%>  
                            <%= error%>
                        <% } %>
                        </div>
                        <label for="remember"><br>Remember me</label>
                        <input type="checkbox" name="remember" id="">
                        <p><br></p>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block"> Log In </button>
                        </div>                                                                    
                    </form>
                </article>
            </div> 
            
        </div> 

        
            </main> 
            
            <%- include('./partials/footer.ejs') %>
            
     